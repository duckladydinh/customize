{
  "name": "Customize",
  "description": "Add custom actions to my browser.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "customize_icon.png"
  },
  "permissions": ["tabs", "activeTab", "scripting"],
  "commands": {
    "toggle-answer": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Toggle answers."
    },
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y",
        "chromeos": "Ctrl+Shift+U",
        "linux": "Ctrl+Shift+J"
      }
    }
  }
}
